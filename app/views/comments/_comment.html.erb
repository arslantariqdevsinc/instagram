<%= turbo_stream_from comment%>
<%= turbo_frame_tag comment do%>
  <div class = "d-flex justify-content-between">
    <div>
        <div>
          <%= comment.user.username %>
          <%= comment.body%>
        </div>
    </div>
    <div>
      <%= link_to 'Edit', edit_comment_path(comment), data:{turbo: true}, class: "mr-2"%>
      <%# <%= link_to 'Delete', comment_path(comment), method: :delete, data:{ 'turbo': true, confirm: "Are you sure?"} , class: "mr-2"%> %>
      <%= link_to 'Delete', comment_path(comment), method: :delete, remote: true,data: {confirm: "Are you sure?"} ,class: "mr-2"%>

    </div>
  </div>
<%end%>
