<%if @comment.persisted? %>
  <%= comment = Comment.new %>
  <%= turbo_stream.append "#{dom_id(@post)}_comments", @comment %>
  <%= turbo_stream.replace dom_id_for_records(@post, comment ), partial: "comments/form", locals: { comment: comment , post: @post} %>
<%else%>
 <%= turbo_stream.replace(dom_id_for_records(@post, @comment), partial: 'comments/form', locals: { comment: @comment, post: @post }) %>
<%end%>
