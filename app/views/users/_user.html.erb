<div>
  <div class= "container pb-5 border-bottom", style = "width:80%">
    <div class = "profile d-flex justify-content-evenly">
      <div class = "profile-image ">
          <%= image_tag user_avatar(user, 200), class: "rounded-circle border border-5 img-fluid" %>
      </div>

      <div>
        <div class="profile-user-settings d-flex justify-content-between">

          <h1 class="profile-user-name">
            <%=user.username%>
          </h1>
          <div class= "d-flex align-items-center justify-content-between px-2">
            <%= link_to 'Edit Profile',  edit_user_registration_path , class: "btn btn-outline-secondary btn-sm mx-2"%>
            <%= link_to 'View Archive',  edit_user_registration_path , class: "btn btn-outline-secondary btn-sm mx-2 disabled"%>
          </div>
        </div>

        <div class="profile-stats", style= "width:80%">

          <ul class= "d-flex justify-content-between ", style = "padding:0">
            <li><p><b><%= user.posts.count %></b> posts</p></li>
            <li><p><b>0</b> followers</p></li>
            <li><p><b>0</b> following</p></li>
          </ul>

        </div>


        <div class="profile-bio">

          <p class="profile-real-name"><b><%=user.fullname%></b></p>
          <p class="profile-bio"><%=user.bio%></p>
          <p class="profile-website"><a href = <%=user.website%>><%=user.website%></a></p>

        </div>

      </div>

    </div>
  </div>



</div>

