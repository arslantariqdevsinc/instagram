<% unless !user_signed_in? %>
  <% like = current_user.likes.find_by(likeable: likeable) %>
  <% if like.nil? %>
  <%=button_to(likes_path, class: "simple-btn", params:{ like: {likeable_id: likeable.id,  likeable_type: likeable.class.to_s}}) do%>
      <h4><i class="bi bi-suit-heart"></i></h4>
  <% end%>
  <% else %>
    <%=button_to(like_path(like), class: "simple-btn", method: :delete) do%>
      <h4><i style = "color: red;" class="bi bi-heart-fill"></i></h4>
    <%end%>
  <% end %>
<%end%>

